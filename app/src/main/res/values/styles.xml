<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
    </style>


    <style name="FullscreenActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="FullscreenActionBarStyle.Pop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

</resources>
